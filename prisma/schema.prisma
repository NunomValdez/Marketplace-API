generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  // url =  file:./dev.db
}

model Product {
  id           String           @id @unique @default(uuid())
  name         String
  warehouse_id String
  quantity     Int
  warehouse    warehouse        @relation("productsOfWarehouse", fields: [warehouse_id], references: [id])
  orders       ProductsOrders[]

  @@map("Products")
}

model Order {
  id          String           @id @unique @default(uuid())
  shipment_id String           @unique @default(uuid())
  shipment    Shipment         @relation(fields: [shipment_id], references: [id])
  products    ProductsOrders[]

  @@map("Orders")
}

model ProductsOrders {
  order_id         String
  product_id       String
  product_quantity Int
  products         Product @relation(fields: [product_id], references: [id])
  orders           Order   @relation(fields: [order_id], references: [id])

  // Shipment Shipment[]
  @@id([order_id, product_id])
}

model Shipment {
  id           String  @id @unique @default(uuid())
  from_address String
  to_address   String
  order_id     String  @default(uuid())
  delivered    Boolean @default(false)
  // products_orders ProductsOrders @relation(fields: [productsOrdersOrder_id, productsOrdersProduct_id], references: [order_id, product_id])

  order Order[]
  // productsOrdersOrder_id   String
  // productsOrdersProduct_id String
  @@map("Shipments")
}

model warehouse {
  id       String    @id @unique @default(uuid())
  location String?
  products Product[] @relation("productsOfWarehouse")

  @@map("Warehouses")
}
